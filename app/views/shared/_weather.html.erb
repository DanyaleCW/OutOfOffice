<%= stylesheet_link_tag 'weather' %>
 <h1><%= @neighborhood %></h1>

<% case @weather["weather"][0]["id"].to_s %>
<% when "800" %>
  <div class="icon sunny">
    <div class="sun">
      <div class="rays"></div>
    </div>
  </div>

<% when "801" %>
  <div class="icon sun-shower">
    <div class="cloud"></div>
    <div class="sun">
      <div class="rays"></div>
    </div>
    <div class="rain"></div>
  </div>

<% when /8\d\d/ %>
  <div class="icon cloudy">
    <div class="cloud"></div>
    <div class="cloud"></div>
  </div>

<% when /2\d\d/ %>
  <div class="icon thunder-storm">
    <div class="cloud"></div>
    <div class="lightning">
      <div class="bolt"></div>
      <div class="bolt"></div>
    </div>
  </div>

<% when /6\d\d/ %>
  <div class="icon flurries">
    <div class="cloud"></div>
    <div class="snow">
      <div class="flake"></div>
      <div class="flake"></div>
    </div>
  </div>

<% when /5\d\d/ %>
  <div class="icon rainy">
    <div class="cloud"></div>
    <div class="rain"></div>
  </div>

<% end %>

<h1><%= @weather["main"]["temp"].round %>&#8457</h1>
<h1>Today: <%= @weather["main"]["temp_min"].round %>&#8457/<%= @weather["main"]["temp_max"].round%>&#8457</h1>
