<%= stylesheet_link_tag 'weather' %>
 <h1>Current weather: <%= @weather["main"]["temp"] %></h1>
 <h2><%= @neighborhood %></h2>
<% case @weather["weather"][0]["description"] %>
<% when "clear sky"  %>
<div class="icon sunny">
  <div class="sun">
    <div class="rays"></div>
  </div>
</div>

<% when "few clouds"  %>

<div class="icon sun-shower">
  <div class="cloud"></div>
  <div class="sun">
    <div class="rays"></div>
  </div>
  <div class="rain"></div>
</div>
<% when "thunderstorm"  %>

<div class="icon thunder-storm">
  <div class="cloud"></div>
  <div class="lightning">
    <div class="bolt"></div>
    <div class="bolt"></div>
  </div>
</div>

<% when "scattered clouds", "broken clouds"  %>

<div class="icon cloudy">
  <div class="cloud"></div>
  <div class="cloud"></div>
</div>

<% when "snow"  %>

<div class="icon flurries">
  <div class="cloud"></div>
  <div class="snow">
    <div class="flake"></div>
    <div class="flake"></div>
  </div>
</div>

<% when "shower rain", "rain", "mist"   %>

<div class="icon rainy">
  <div class="cloud"></div>
  <div class="rain"></div>
</div>

<% else %>

<h1>Snow happens, weather you like it or not</h1>

<% end %>
